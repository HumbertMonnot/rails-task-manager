<h1>My tasks</h1>

<% @tasks.each do |task| %>
  <% if task.completed == true %>
    <li><i class='fa-solid fa-square-check'></i> - <%= link_to task.title, task_path(task) %> - 
      <%= link_to "<i class='fa-solid fa-trash-can'></i>".html_safe,  delete_task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" }%>
    </li>
  <% else %>
    <li><i class='fa-solid fa-square'></i> - <%= link_to task.title, task_path(task) %> - 
      <%= link_to "<i class='fa-solid fa-trash-can'></i>".html_safe,  delete_task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" }%>
    </li>
  <% end %>
<% end %>

<%= link_to "Create new Task", tasks_new_path  %>