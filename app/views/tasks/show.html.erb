<h1>
  <%= @task.title %>
</h1>

<p><%=   @task.details %></p>
<% if @task.completed == true %>
  <p><i class='fa-solid fa-square-check'></i> - This task is completed</p>
<% else %>
  <p><i class='fa-solid fa-square'></i> - This task is not completed yet</p>
<% end %>

<%= link_to "Edit Task", edit_task_path(@task) %>
